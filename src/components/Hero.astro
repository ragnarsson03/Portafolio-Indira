<style>
    .hero {
        min-height: 90vh;
        display: flex;
        align-items: center;
        padding: 2rem 1rem;
        overflow: hidden;
        position: relative;
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
    }
    
    .hero-content {
        flex: 1;
    }
    
    h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--color-text);
    }
    
    p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        color: #4b5563;
        max-width: 500px;
    }
    
    .hero-buttons {
        display: flex;
        gap: 1rem;
    }
    
    .primary-button {
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .primary-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
        color: white;
    }
    
    .secondary-button {
        background-color: transparent;
        color: var(--color-text);
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        border: 2px solid var(--color-primary);
        transition: all 0.3s ease;
    }
    
    .secondary-button:hover {
        background-color: var(--color-primary);
        color: white;
    }
    
    .hero-image {
        flex: 1;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .blob-svg {
        width: 100%;
        max-width: 500px;
        height: auto;
        opacity: 0.7;
    }
    
    .avatar-svg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        max-width: 300px;
        height: auto;
    }
    
    @media (max-width: 768px) {
        .container {
            flex-direction: column-reverse;
            text-align: center;
        }
        
        .hero-content {
            margin-top: 2rem;
        }
        
        h1 {
            font-size: 2.5rem;
        }
        
        h2 {
            font-size: 1.5rem;
        }
        
        p {
            font-size: 1rem;
            margin-left: auto;
            margin-right: auto;
        }
        
        .hero-buttons {
            justify-content: center;
        }
    }
</style>